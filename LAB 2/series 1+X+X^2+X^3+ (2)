// for time complexity 0(1)

#include <stdio.h>
#include <math.h>

int main() {
    int a, r, n;
    double sum = 0;  
    printf("Enter a, r, n: ");
    scanf("%d %d %d", &a, &r, &n);
    if (r == 1) {
        sum = a * n;
    } else {
        sum = (a * (pow(r, n) - 1)) / (r - 1);
    }
    printf("Sum = %.0f\n", sum);
    return 0;
}
